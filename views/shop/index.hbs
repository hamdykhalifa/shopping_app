{{#each products}}
<div class="row">
    {{#each this}}
    <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card">
            <img src="{{ this.imagePath }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ this.title }}</h5>
                <p class="card-text">{{ this.text }}</p>
                <div class="price pull-left">${{ this.price }}</div>
                <a href="/add-to-cart/{{this.id}}" class="btn btn-primary pull-right">Add to cart</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}